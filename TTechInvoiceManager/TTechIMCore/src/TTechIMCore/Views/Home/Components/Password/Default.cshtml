@{
}

<section>
    @model TTechIMCore.Models.Home.PasswordViewModel
    <form asp-controller="Home" asp-action="ChangePassword" method="post">
        <div class="row">
            <table class="table table-striped">
                <tr>
                    <td>
                        <div>
                            <p class="bg-info">
                                <ul>
                                    <li>Makes sure there are no white-space characters</li>
                                    <li>Minimum length of 8</li>
                                    <li>
                                        Makes sure there is at least:
                                        <ul>
                                            <li>One non-alpha character</li>
                                            <li>One upper case character</li>
                                            <li>One lower case character</li>
                                        </ul>
                                    </li>
                                </ul>
                            </p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="hidden">
                            @Html.EditorFor(m => m.UserId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(m => m.Password, "Password", htmlAttributes: new { @class = "control-label small" })
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control small" } })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "bg-warning" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(m => m.RetryPassword, "Re-Password", htmlAttributes: new { @class = "control-label small" })
                            @Html.EditorFor(m => m.RetryPassword, new { htmlAttributes = new { @class = "form-control small" } })
                            @Html.ValidationMessageFor(m => m.RetryPassword, "", new { @class = "bg-warning" })
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-default small">Change Password</button>
        </div>
        <div class="row">
            @if (ViewData["PasswordErrorMessage"] != null)
            {
                <div>
                    <p class="bg-warning">@Html.Raw(@ViewData["PasswordErrorMessage"])</p>
                </div>
            }
            @if (ViewData["PasswordSuccessMessage"] != null)
            {
                <div>
                    <p class="bg-success">@Html.Raw(@ViewData["PasswordSuccessMessage"])</p>
                </div>
            }
        </div>
    </form>
</section>