@{
    ViewData["Title"] = "Forgot Password";
}

<h4>@ViewData["Title"].</h4>
<hr />

<section>
    <div class="container-fluid">
        @model TTechIMCore.Models.Account.RegisterViewModel
        <form asp-controller="Account" asp-action="ExeForgotPassword" method="post">
            <div class="row">
                <table class="table table-striped">
                    <tr>
                        <td>
                            <div class="form-group form-group-sm">
                                @Html.LabelFor(m => m.UserName, "Username", htmlAttributes: new { @class = "control-label col-sm-3" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "bg-warning" })
                                </div>
                            </div>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group form-group-sm">
                                @Html.LabelFor(m => m.Email, "Email Address", htmlAttributes: new { @class = "control-label col-sm-3" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "bg-warning" })
                                </div>
                            </div>
                            <br />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="row">
                @if (ViewData["SuccessMessage"] == null && ViewData["WarningMessage"] == null)
                {
                    <p><button type="submit" class="btn btn-primary">Reset</button></p>
                }
                @if (ViewData["WarningMessage"] != null)
                {
                    <p><button type="submit" class="btn btn-primary">Reset</button></p>
                    <p class="bg-warning">@Html.Raw(@ViewData["WarningMessage"])</p>
                }
                @if (ViewData["SuccessMessage"] != null)
                {
                    <p><button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Login", "Account")'">Go back to Login</button></p>
                    <p class="bg-success">@Html.Raw(@ViewData["SuccessMessage"])</p>
                }
            </div>
        </form>
    </div>
</section>