<section>
    <div id="loginCarousel" class="carousel slide im-slide-background" data-interval="3000" data-ride="carousel">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#loginCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#loginCarousel" data-slide-to="1"></li>
            <li data-target="#loginCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="item active">
                <!--<img src="images/slide1.png" alt="First Slide">-->
                <div class="jumbotron im-slide-minheight im-slide-background-none">
                    <blockquote class="im-p-segoeui">
                        <p>
                            <h1>Hello World!</h1>
                            <h4>Welcome to TY Tech - Invoice Manager</h4>
                        </p>
                    </blockquote>
                </div>
            </div>
            <div class="item">
                <!--<img src="images/slide2.png" alt="Second Slide">-->
                <div class="jumbotron im-slide-minheight im-slide-background-none">
                    <blockquote>
                        <p>
                            <strong><em>Invoice Manager</em></strong> is a light weight cross-platform web-based application that serves people to better manage their day-to-day expenses.
                            <br />And it provides analytic tools to encourage saving...
                        </p>
                        <footer>Noah Tong</footer>
                        <br />
                        <p><a class="btn btn-primary" role="button" onclick="location.href='@Url.Action("Register", "Account")'">Get started <span class="glyphicon glyphicon-circle-arrow-right"></span></a></p>
                    </blockquote>
                </div>
            </div>
            <div class="item">
                <!--<img src="images/slide2.png" alt="Second Slide">-->
                <div class="jumbotron im-slide-minheight im-slide-background-none">
                    <blockquote>
                        <p>
                            Your <strong>opinion</strong> matters to us, so we’d be really appreciative if you take a few moments to provide your experience and feedback.
                        </p>
                        <br />
                        <p><a class="btn btn-primary" role="button" onclick="location.href='@Url.Action("MessageBoard", "Account")'">Leave your comments <span class="glyphicon glyphicon-circle-arrow-right"></span></a></p>
                    </blockquote>
                </div>
            </div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#loginCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#loginCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</section>
