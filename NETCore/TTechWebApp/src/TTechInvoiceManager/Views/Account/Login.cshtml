@{
    ViewData["Title"] = "Login";
}

<h4>@ViewData["Title"].</h4>

<section>
    <div class="container-fluid">
        <div class="row">
            @await Component.InvokeAsync("LoginCarousel")
        </div>
        <div class="row">
            <div class="col-sm-4">
                @await Component.InvokeAsync("LoginControl")
            </div>
            <div class="col-sm-2">
                <br />
                <br />
                <h3>Or</h3>
            </div>
            <div class="col-sm-4">
                <section>
                    <h2><small>Connect with</small></h2>
                    <p><button type="button" class="btn btn-lg" disabled>Facebook</button></p>
                    <p><button type="button" class="btn btn-lg" disabled>Google+</button></p>
                    <p><button type="button" class="btn btn-lg" disabled>Linkedin</button></p>
                </section>
            </div>
        </div>
    </div>
</section>