@{
    ViewData["Title"] = "Message Board";
}

<h4>@ViewData["Title"].</h4>
<hr />

@if (ViewData["MessageBoardSuccessMessage"] != null)
{
    <div>
        <p class="bg-success">@Html.Raw(@ViewData["MessageBoardSuccessMessage"])</p>
    </div>
}

<section>
    @model NTWebApp.Models.Account.MessageBoardMsgViewModel
    <div class="container-fluid">
        <form asp-controller="Account" asp-action="MessageBoard" method="post">
            <div class="form-group">
                @Html.LabelFor(m => m.Message, "Message", htmlAttributes: new { @class = "control-label col-sm-3" })
                <div>
                    @Html.TextAreaFor(m => m.Message, new { cols = 60, rows = 10, @class = "form-control im-messageboard-textarea" })
                    @Html.ValidationMessageFor(m => m.Message, "", new { @class = "bg-warning" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Name", htmlAttributes: new { @class = "control-label col-sm-3" })
                <div>
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "bg-warning" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Email", htmlAttributes: new { @class = "control-label col-sm-3" })
                <div>
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "bg-warning" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Time, "Time", htmlAttributes: new { @class = "control-label col-sm-3" })
                <div>
                    @Html.DisplayFor(m => m.Time, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="row">
                @if (ViewData["MessageBoardErrorMessage"] != null)
                {
                    <p class="bg-warning">@Html.Raw(@ViewData["MessageBoardErrorMessage"])</p>
                }
            </div>
        </form>
    </div>
</section>